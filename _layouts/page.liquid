---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if page.stylized-title == 'blank %}
        {{ page.title }}
      {% else %}
        {{ page.stylized-title }}
      {% endif %}
    </h1>
    <p class="post-description">
      {% if page.stylized-description == 'blank %}
        {{ page.description }}
      {% else %}
        {{ page.stylized-description }}
      {% endif %}
    </p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>{{ site.data[site.active_lang].strings.references }}</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
